<% if current_user.admin %>
<body>
<p id="notice"><%= notice %></p>
<div class = "container"> 
  <img src="/assets/WIN_logo.jpeg" width="100">
</div>
<div class="jumbotron text-center" style="color:white; background-color: #3399ff">
  <h2>Meeting Logs</h2>
</div>

<div class='container'>
<table class="table table-striped align-middle mb-0 bg-white">
  <thead>
    <tr>
      <th>Database User ID</th>
      <th>Meeting ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meetinglogs.each do |meetinglog| %>
      <tr>
        <td><%= meetinglog.user_id %></td>
        <td><%= meetinglog.meeting_id %></td>
        <td><%= link_to 'Edit', edit_meetinglog_path(meetinglog) %></td>
        <td><%= link_to 'Destroy', meetinglog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<div class="text-center col-xs-3">
	<%= link_to 'New Meeting Log', new_meetinglog_path, {class: "btn btn-light"}%>
<br>
	<%= link_to 'Back', root_path, {class: "btn btn-light"} %>
</div>
</body>

<% else %>
<p> Access Denied. Need Admin Privileges</p>
<% end %>
