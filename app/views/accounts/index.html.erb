<p id="notice"><%= notice %></p>

<% if current_user.admin %>
<h1> Hello, admin:  <%= current_user.first_name %> <%= current_user.last_name %> </h1>
<% else %>
<h1> Hello, regular club member:  <%= current_user.first_name %> <%= current_user.last_name %> </h1>
<% end%>

<% if current_user.admin %>
<%= form_tag accounts_path, :method => 'get' do %>
  <p>
    <%= label_tag(:search_by_first_name, "Search By First Name: ") %>
    <%= text_field_tag :search_by_first_name, params[:search_by_first_name] %>

    <%= label_tag(:search_by_last_name, "Search By Last Name: ") %>
    <%= text_field_tag :search_by_last_name, params[:search_by_last_name] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Password</th>
      <th>Points</th>
      <th>Admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.id %></td>
        <td><%= account.first_name %></td>
        <td><%= account.last_name %></td>
        <td><%= account.email %></td>
        <td><%= account.password %></td>
        <td><%= account.points %></td>
        <td><%= account.admin %></td>
        <td><%= link_to 'Show', account %></td>
        <td><%= link_to 'Edit', edit_account_path(account) %></td>
        <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<h2> Points: <%= current_user.points %></h2>

<br>
<%= link_to 'View Events', events_path %>

<br>
<%= link_to 'Attend Meeting', account_meeting_path(current_user) %> 

<br> 
<%= link_to 'Logout', "/logout" %>
<br>

<%= link_to 'Leaderboard', leaderboard_path %>
<br>
