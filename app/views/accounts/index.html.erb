<p id="notice"><%= notice %></p>

<% if current_user.admin %>
<h1> Hello, admin:  <%= current_user.first_name %> <%= current_user.last_name %> </h1>
<% else %>
<h1> Hello, regular club member:  <%= current_user.first_name %> <%= current_user.last_name %> </h1>
<% end%>

<% if current_user.admin %>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Password</th>
      <th>Points</th>
      <th>Admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.id %></td>
        <td><%= account.first_name %></td>
        <td><%= account.last_name %></td>
        <td><%= account.email %></td>
        <td><%= account.password %></td>
        <td><%= account.points %></td>
        <td><%= account.admin %></td>
        <td><%= link_to 'Show', account %></td>
        <td><%= link_to 'Edit', edit_account_path(account) %></td>
        <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Reset Points', account_resetpoints_path(current_user.id) %>
<br>

<% end %>

<h2> Points: <%= current_user.points %></h2>

<br>
<%= link_to 'View Events', events_path %>
<br>

<%= form_with url: account_meeting_path(current_user.id), local: true, method: :post do %>
  <div>
    <strong><%= label_tag "event_id", "Event ID" %></strong>
    <%= text_field_tag "event_id", nil %>
  </div>

  <%= submit_tag "Attend Meeting" %>
<% end %>

<br> 
<%= link_to 'Logout', "/logout" %>
<br>
