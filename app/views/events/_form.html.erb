<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :meeting_id, 'Meeting Verification Code     (Will be auto generated)' %>
    <%= form.number_field :meeting_id, :value => @event.meeting_id, :readonly => true %>
  </div>

  <div class="field">
    <%= form.label :points %>
    <%= form.number_field :points %>
  </div>
  
  <div class="field">
    <%= form.label :meeting_name %>
    <%= form.text_field :meeting_name %>
  </div>
 
 
  <div class="field">
    <%= form.label :start_time %>
    <%= form.datetime_select :start_time  %>
  </div>
  
  <div class="field">
    <%= form.label :end_time %>
    <%= form.datetime_select :end_time, :default => Time.now + 1.hours %>
  </div> 

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
