<body style="background-color:#3399ff">
<div class="jumbotron text-center" style="color:#3399ff">
  <h2>Meeting Validation</h2>
</div>

<div class="text-center">
<% if @event&.meeting_name%>
  <h4 class="text-light">Current Points: <%= current_user.points%></h4>
  <h4 class="text-light">Meeting Name: <%= @event.meeting_name %></h4>
  <h4 class="text-light">Meeting Description: <%= @event.description %></p>
  <h4 class="text-light">Meeting Point Value: <%= @event.points %></h4>
  
  <% if @entry %>
    <h4>Error! Meeting already attended!</h4>
  <% else %>
    <h3>Success! Meeting has been attended</h3>
	
  <% end %>
<% else %>
  <h3>Error! Meeting ID does not exist or Time has run out!</h3>
<% end %>
</div>
<div class="text-center">
<%= button_to 'Back', root_path, :class => "btn btn-secondary", :method => :get  %>
</div>
</body>